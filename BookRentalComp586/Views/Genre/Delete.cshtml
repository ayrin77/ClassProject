@model BookRentalComp586.Models.Genre
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div>
        <h3>Do you want to delete this Genre?</h3>
        <hr />
        <div class="form-border">
            <fieldset disabled>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-lable col-mid-2" })
                    <div class="col-mid-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
            </fieldset>
</div>
   </div>
        <br/>
   <div>
        @Html.Partial("_BackToListButtonPartial")
        <input type="submit" value="Delete" class="btn btn btn-danger" />
    </div>

}
