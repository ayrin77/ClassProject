@model BookRentalComp586.Models.IndividualButtonPartial
@using BookRentalComp586.Models

<td style="width:400px;">
    <div class="btn-group" role="group">
       @Html.Partial("_IndividualButtonPartial",
               new IndividualButtonPartial
               {
                   Action = "Edit",
                   ButtonType = "btn-primary",
                   Glyph = "pencil",
                   Text = "Edit Button",
                   GenreID = Model.GenreID,
                   BookID =Model.BookID,
                   CustomerID=Model.CustomerID,
                   MembershipTypeID=Model.MembershipTypeID,
                   UserId = Model.UserId
               })

        @Html.Partial("_IndividualButtonPartial",
               new IndividualButtonPartial
               {
                   Action = "Details",
                   ButtonType = "btn-success",
                   Glyph = "list",
                   Text = "Details Button",
                   GenreID = Model.GenreID,
                   BookID = Model.BookID,
                   CustomerID = Model.CustomerID,
                   MembershipTypeID = Model.MembershipTypeID,
                   UserId = Model.UserId
               })

        @Html.Partial("_IndividualButtonPartial",
               new IndividualButtonPartial
               {
                   Action = "Delete",
                   ButtonType = "btn-danger",
                   Glyph = "trash",
                   Text = "Delete Button",
                   GenreID = Model.GenreID,
                   BookID = Model.BookID,
                   CustomerID = Model.CustomerID,
                   MembershipTypeID = Model.MembershipTypeID,
                   UserId = Model.UserId
               })
    </div>
</td>