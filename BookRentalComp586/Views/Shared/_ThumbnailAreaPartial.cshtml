@model BookRentalComp586.ViewModel.ThumbnailBoxViewModel


<div class="row">
    @if (Model.Thumbnails != null)
    {
        foreach (var thumbnail in Model.Thumbnails)
        {
            /*use bootstrap to place books if the screen size changes
            if the screen size falls to exrtra small it will be 6 means
            12 will be divided into 6 partations (only 2 books will be display)
            if it is medium or larger it will occupied 3 spaces it means
            in 12 will be 4 books*/
            <div class="col-xs-6 col-md-3">
                <div class="thumbnail">
                    <div class="thumbnail-img-container">
                        <a href="@thumbnail.Link"><img class="thumbnail-img" src="@thumbnail.ImageUrl" alt="" /></a>
                    </div>
                    <div class="caption">
                        <h3><a href="@thumbnail.Link">@thumbnail.Title</a></h3>
                        <p>@Html.Raw(thumbnail.Description)</p>
                    </div>
                </div>
            </div>
        }
    }
</div>